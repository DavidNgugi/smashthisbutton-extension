{
    "manifest_version": 2,
    "name": "SmashThisButton: Custom YouTube Buttons for your audience",
    "short_name": "SmashThisButton",
    "description": "Build custom YouTube Buttons for your audience",
    "version": "1.3.16",
    "key": "",
    "browser_action": {
      "default_icon": "icon48.png",
      "default_title": "SmashThisButton"
    },
    "icons": {
      "128": "icon128.png"
    },
    "externally_connectable": {
      "matches": [
        "https://smashthisbutton.herokuapp.com/*"
      ]
    },
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "cookies",
      "*://*.youtube.com/*"
    ],
    "background": {
      "persistent": true,
      "scripts": [
        "src/build/background.js"
      ]
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.youtube.com/*"
        ],
        "all_frames": true,
        "js": ["src/build/bridge.js"]
      },
      {
        "js": ["src/build/main.js"],
        "css": [
          "src/css/root.css",
          "src/css/remote-control.css"
        ]
      }
    ],
    "web_accessible_resources": [
      "src/img/*",
      "src/css/*"
    ],
    "content_security_policy": "script-src 'self' object-src 'self'"
  }